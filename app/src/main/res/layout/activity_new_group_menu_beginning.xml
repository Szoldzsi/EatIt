<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGroupMenuBeginningActivity">


    <TextView
        android:id="@+id/groupTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Új csoportos menü tervezése"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Időtartam megadása"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/napokgrpTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Menü neve"
        android:inputType="text" />

    <EditText
        android:id="@+id/datumgrpTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kezdő dátum megadása"
        android:inputType="date" />

    <EditText
        android:id="@+id/idotartamgrpTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Időtartam"
        android:inputType="number" />

    <Button
        android:id="@+id/startgrpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kezdés" />

</LinearLayout>